{
    "compilerOptions": {
        "declaration": true,
        "outDir": "./lib",
        "target": "es5", //ES2020
        "jsx": "preserve",
        "module": "commonjs", //ess2015
        "rootDir": "./src",
        "moduleResolution": "node",
        "importHelpers": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "declarationMap": true
    }
}