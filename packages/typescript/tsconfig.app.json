{
    "compilerOptions": {
        "declaration": false,
        "target": "ES2020",
        "jsx": "preserve",
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "noEmit": true,
        "incremental": true,
        "isolatedModules": true
    },
    "exclude": [
        "node_modules", "../node_modules"
    ]
}